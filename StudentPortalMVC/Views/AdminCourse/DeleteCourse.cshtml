@model StudentPortalMVC.Models.Course

@{
    ViewBag.Title = "Delete Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Delete Course</h2>

<h3 class="text-danger">Are you sure you want to delete this course?</h3>
<div class="alert alert-warning">
    <strong>Warning:</strong> Deleting a course will make it unavailable for new registrations. Ensure there are no active enrollments tied to this course, or handle them appropriately in your database.
</div>
<div>
    <h4>Course Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CourseCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CourseCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Faculty)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Faculty)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CourseDuration)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CourseDuration)
        </dd>
    </dl>

    @using (Html.BeginForm("DeleteCourse", "AdminCourse", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CourseId) 

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        @Html.ActionLink("Back to List", "ManageCourses", "Admin", null, new { @class = "btn btn-secondary ms-2" })
                    </div>
                }
            </div>
