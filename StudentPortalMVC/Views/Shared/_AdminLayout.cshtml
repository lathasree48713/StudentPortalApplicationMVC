@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Admin Portal" />
    <meta name="author" content="" />
    <title>@ViewBag.Title - Admin Portal</title>

    @* Admin-specific CSS Bundles (You might keep these or create new ones) *@
    @Styles.Render("~/Content/sbadminstyles")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/datatablescss")

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="@Url.Action("Dashboard", "Admin")">Admin Portal</a>

        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
            </div>
        </form>

        @* Admin User Dropdown (Logout) *@
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i> @(Request.IsAuthenticated ? User.Identity.Name : "Guest")
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    @* You can add admin settings, profile links here if needed *@
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutFormAdmin", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                            <a class="dropdown-item" href="javascript:document.getElementById('logoutFormAdmin').submit()">Logout</a>
                        }
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Admin Core</div>
                        @Html.ActionLink("Admin Dashboard", "Dashboard", "Admin", null, new { @class = "nav-link" })

                        <div class="sb-sidenav-menu-heading">Management</div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseUsers" aria-expanded="false" aria-controls="collapseUsers">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Users
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseUsers" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                @Html.ActionLink("Manage Students", "ManageStudents", "Admin", null, new { @class = "nav-link" })
                                @Html.ActionLink("Manage Teachers", "ManageTeachers", "Admin", null, new { @class = "nav-link" })
                                @Html.ActionLink("Manage Admins", "ManageAdmins", "Admin", null, new { @class = "nav-link" })
                            </nav>
                        </div>

                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseAcademics" aria-expanded="false" aria-controls="collapseAcademics">
                            <div class="sb-nav-link-icon"><i class="fas fa-graduation-cap"></i></div>
                            Academics
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseAcademics" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                @Html.ActionLink("Manage Courses", "ManageCourses", "AdminCourse", null, new { @class = "nav-link" })
                                @Html.ActionLink("Manage TimeTable", "ManageClassSchedule", "AdminClassSchedule", null, new { @class = "nav-link" })
                                @Html.ActionLink("Manage Grades", "ManageGrades", "Admin", null, new { @class = "nav-link" })
                            </nav>
                        </div>

                        @Html.ActionLink("Announcements", "ManageAnnouncements", "Admin", null, new { @class = "nav-link" })
                        @Html.ActionLink("System Settings", "SystemSettings", "Admin", null, new { @class = "nav-link" })
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    <div>@User.Identity.Name</div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Admin Portal @DateTime.Now.Year</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @* Admin-specific JS Bundles (You might keep these or create new ones) *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/ContentSource/js/Chart.min.js" crossorigin="anonymous"></script>

    <script src="~/ContentSource/js/scripts.js"></script>
    <script src="~/ContentSource/js/datatables-simple-demo.js"></script>
    <script src="~/ContentSource/assets/demo/chart-area-demo.js"></script>
    <script src="~/ContentSource/assets/demo/chart-bar-demo.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>