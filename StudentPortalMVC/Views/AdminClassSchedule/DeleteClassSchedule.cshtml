@model StudentPortalMVC.Models.ClassSchedule

@{
    ViewBag.Title = "Delete Class Schedule Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Delete Class Schedule Entry</h2>

<h3 class="text-danger">Are you sure you want to delete this class schedule entry?</h3>
<div>
    <h4>Class Schedule Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Teacher.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Teacher.Name)
        </dd>

        <dt>
            Day
        </dt>
        <dd>
            @ViewBag.DayOfWeekConverter(Model.DayOfWeek)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RoomNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
    </dl>

    @using (Html.BeginForm("DeleteClassSchedule", "AdminClassSchedule", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ClassScheduleId)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "ManageClassSchedule", "AdminClassSchedule", null, new { @class = "btn btn-secondary ms-2" })
        </div>
    }
</div>